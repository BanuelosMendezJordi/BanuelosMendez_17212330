<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AgendApp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">AgendApp</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li>
                        <a class="nav-item nav-link" href="@Url.Action("About","Home")">Acerca de</a>
                    </li>
                    <li>
                        <a class="nav-item nav-link" href="@Url.Action("Contact","Home")">Contacto</a>

                    </li>
                    <li>
                        <a class="nav-item nav-link" href="@Url.Action("Index","Cities")">Ciudades</a>
                    </li>
                    <li>
                        <a class="nav-item nav-link" href="@Url.Action("Index","Events")">Eventos</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <div class="container body-content">
        <footer class="fixed-bottom bg-dark text-white" style="text-align:center">
            <p>&copy; @DateTime.Now.Year - Bañuelos Mendez Jordi</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
