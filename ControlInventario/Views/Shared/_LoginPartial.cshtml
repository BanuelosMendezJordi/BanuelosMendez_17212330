@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index","Suppliers")">Proveedores</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index","Products")">Productos</a>
        </li>
        <li class="nav-item">
            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { @class = "nav-link" })
        </li>
        <li class="nav-item">
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a>
        </li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Index","Suppliers")">Proveedores</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Index","Products")">Productos</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Register","Account")">Registro</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Login", "Account")">Inicio de Sesión</a>
    </li>
</ul>
}
